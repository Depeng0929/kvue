{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "types": [
      "vue",
      "node",
      "jest",
    ],
    "paths": {
      "@depeng9527/visible": ["packages/visible/src/index.ts"],
      "@depeng9527/klib": ["packages/klib/src/index.ts"],
    }
  },
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.vue"
,   "shims-vue.d.ts"
  ],
  "exclude": ["**/dist/**", "node_modules"]
}

